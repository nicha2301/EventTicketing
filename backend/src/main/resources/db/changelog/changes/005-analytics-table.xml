<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="005" author="eventticketing">
        <comment>Create analytics tables</comment>
        
        <!-- Analytics Events table -->
        <createTable tableName="analytics_events">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="event_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="true"/>
            </column>
            <column name="event_id" type="UUID">
                <constraints nullable="true"/>
            </column>
            <column name="data" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Indexes for analytics_events table -->
        <createIndex tableName="analytics_events" indexName="idx_analytics_event_type">
            <column name="event_type"/>
        </createIndex>
        <createIndex tableName="analytics_events" indexName="idx_analytics_user_id">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="analytics_events" indexName="idx_analytics_event_id">
            <column name="event_id"/>
        </createIndex>
        <createIndex tableName="analytics_events" indexName="idx_analytics_timestamp">
            <column name="timestamp"/>
        </createIndex>
        
        <!-- Analytics Dashboards table -->
        <createTable tableName="analytics_dashboards">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="config" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_dashboard_user" references="users(id)"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Analytics Reports table -->
        <createTable tableName="analytics_reports">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="report_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="config" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="dashboard_id" type="UUID">
                <constraints nullable="true" foreignKeyName="fk_report_dashboard" references="analytics_dashboards(id)"/>
            </column>
            <column name="created_by" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_report_user" references="users(id)"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog> 